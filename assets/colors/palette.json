        { "color": "rgba(0, 255, 255, 0.6)", "position": "100%" }
      ]
    },
    "neon": {
      "type": "linear",
      "angle": "135deg",
      "stops": [
        { "color": "#00FFFF", "position": "0%" },
        { "color": "#B026FF", "position": "50%" },
        { "color": "#FF00FF", "position": "100%" }
      ]
    }
  },
  "shadows": {
    "glow": {
      "cyan": "0 0 20px rgba(0, 255, 255, 0.5)",
      "magenta": "0 0 20px rgba(255, 0, 255, 0.5)",
