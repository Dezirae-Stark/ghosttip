      "h6": "1rem",
      "lg": "1.125rem",
      "base": "1rem",
      "sm": "0.875rem",
      "xs": "0.75rem"
    }
  },
  "spacing": {
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
