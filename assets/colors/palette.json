{
  "name": "GhostTip Cyberpunk Palette",
  "version": "1.0",
  "colors": {
    "neon": {
      "cyan": "#00FFFF",
      "magenta": "#FF00FF",
      "purple": "#B026FF",
      "green": "#39FF14"
    },
    "noir": {
      "black": "#0A0E14",
      "dark": "#0F1419",
      "medium": "#1A1F2E",
      "elevated": "#252A3A"
    },
    "text": {
      "primary": "#E6E6E6",
      "secondary": "#B3B3B3",
      "muted": "#666666",
      "accent": "#00FFFF"
    },
    "status": {
      "success": "#39FF14",
      "warning": "#FFAA00",
      "error": "#FF0055",
      "info": "#00BFFF"
    }
  },
  "gradients": {
    "hologram": {
      "type": "linear",
      "angle": "180deg",
      "stops": [
        { "color": "rgba(0, 255, 255, 0.8)", "position": "0%" },
        { "color": "rgba(176, 38, 255, 0.6)", "position": "33%" },
