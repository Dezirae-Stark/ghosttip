{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@ghosttip/shared$": "<rootDir>/../../packages/shared/src",
    "^@ghosttip/crypto$": "<rootDir>/../../packages/crypto/src",
    "^@ghosttip/config$": "<rootDir>/../../packages/config/src"
  }
}
