# GhostTip Backend - Environment Variables

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/ghosttip"

# ============================================================================
# SECURITY (CHANGE THESE IN PRODUCTION!)
# ============================================================================
MASTER_KEY="CHANGE-THIS-master-key-minimum-32-characters-long-CHANGE-THIS"
JWT_SECRET="CHANGE-THIS-jwt-secret-minimum-32-characters-long-CHANGE-THIS"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================================================
# SERVER
# ============================================================================
PORT=3001
NODE_ENV="development"

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN="http://localhost:3000"

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# APPLICATION URLS
# ============================================================================
APP_NAME="GhostTip"
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"
